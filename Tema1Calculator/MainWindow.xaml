<Window x:Class="Tema1Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema1Calculator"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        Icon="C:/Users/40720/OneDrive/Desktop/FACULTATE/AN II/SEM II/Medii Vizuale de Programare/Tema1Calculator/OIP.jpeg"
        Title="Calculator" 
        Height="550" 
        Width="350" 
        Background="AliceBlue"
        ResizeMode="NoResize" 
        MinWidth="300" 
        MinHeight="450"
        Focusable="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu pentru aplicatie -->
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Cut" Click="CutMenuItem_Click" />
                <MenuItem Header="Copy" Click="CopyMenuItem_Click" />
                <MenuItem Header="Paste" Click="PasteMenuItem_Click" />
                <MenuItem Header="Digit Grouping" IsCheckable="True" 
              IsChecked="{Binding DigitGroupingEnabled}" 
              Click="DigitGrouping_Click"/>
            </MenuItem>
            <MenuItem Header="Mode">
                <MenuItem Header="Standard" />
                <Separator></Separator>
                <MenuItem Header="Programmer"></MenuItem>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- History -->
            <TextBlock Text="{Binding OperationHistory}" 
                     Grid.Row="0" 
                     HorizontalAlignment="Right" 
                     FontSize="14" 
                     Margin="0,5" 
                     Foreground="Gray"/>

            <!-- Main Display -->
            <TextBox Name="ResultTextBox" 
                     Text="{Binding DisplayText, Mode=OneWay}" 
                     Grid.Row="1" 
                     HorizontalAlignment="Stretch" 
                     FontSize="30" 
                     Padding="5" 
                     Height="60" 
                     TextAlignment="Right" 
                     IsReadOnly="True"/>
        </Grid>

        <!-- StackPanel pentru alte elemente -->
        <StackPanel Name="MemoryButtonsPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="M+" FontSize="20" Margin="5" Width="40" Background="AliceBlue" BorderBrush="AliceBlue"/>
            <Button Content="M-" FontSize="20" Margin="5" Width="40" Background="AliceBlue" BorderBrush="AliceBlue"/>
            <Button Content="MR" FontSize="20" Margin="5" Width="40" Background="AliceBlue" BorderBrush="AliceBlue"/>
            <Button Content="MC" FontSize="20" Margin="5" Width="40" Background="AliceBlue" BorderBrush="AliceBlue"/>
            <Button Content="M" FontSize="20" Margin="5" Width="40" Background="AliceBlue" BorderBrush="AliceBlue"/>
        </StackPanel>

        <!-- Grid pentru butoane -->
        <Grid Name="Grid" Grid.Row="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Butoane pentru alte funcții -->
            <Button Content="%" Grid.Row="0" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="CE" Grid.Row="0" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="C" Grid.Row="0" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="⌫" Grid.Row="0" Grid.Column="3" FontSize="20" Margin="5"/>

            <Button Content="⅟x" Grid.Row="1" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="x²" Grid.Row="1" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="√x" Grid.Row="1" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="/" Grid.Row="1" Grid.Column="3" FontSize="20" Margin="5"/>

            <!-- Butoane pentru numerale -->
            <Button Content="7" Grid.Row="2" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="*" Grid.Row="2" Grid.Column="3" FontSize="20" Margin="5"/>

            <Button Content="4" Grid.Row="3" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="5" Grid.Row="3" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="6" Grid.Row="3" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="-" Grid.Row="3" Grid.Column="3" FontSize="20" Margin="5"/>

            <Button Content="1" Grid.Row="4" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="2" Grid.Row="4" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="3" Grid.Row="4" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="+" Grid.Row="4" Grid.Column="3" FontSize="20" Margin="5"/>

            <Button Content="±" Grid.Row="5" Grid.Column="0" FontSize="20" Margin="5"/>
            <Button Content="0" Grid.Row="5" Grid.Column="1" FontSize="20" Margin="5"/>
            <Button Content="." Grid.Row="5" Grid.Column="2" FontSize="20" Margin="5"/>
            <Button Content="=" Grid.Row="5" Grid.Column="3" FontSize="20" Margin="5"/>
        </Grid>
    </Grid>
</Window>